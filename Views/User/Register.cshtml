@model Test.Models.LoginModel
<section class="login">
  <div class="login-container">
    @Html.ValidationSummary(true,"",new {@class="text-danger"})

    <form action="">
      E-Mail
      <div class="form-group">
        @Html.EditorFor(model => model.email, new {htmlAttributes = new {@class
        = "form-control"}})
      </div>
      Password
      <div class="form-group">
        @Html.EditorFor(model => model.password, new {htmlAttributes = new
        {@class = "form-control"}})
      </div>
      <input type="submit" value="Register" />
      <div class="text-center w-12/12">
        <p></p>
          @Html.ActionLink("Already have an account? Click Here","Login","User")
        </p>
      </div>
    </form>
  </div>
</section>
