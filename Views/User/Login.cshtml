@model Test.Models.LoginModel



@using (Html.BeginForm()) {
  @Html.AntiForgeryToken()

<section class="login">
  <div class="login-container">
    @Html.ValidationSummary(true,"",new {@class="text-danger"})

    <form action="">
      E-Mail
      <div class="form-group">
        @Html.EditorFor(model => model.email, new {htmlAttributes = new {@class
        = "form-control"}})
      </div>
      Password
      <div class="form-group">
        @Html.EditorFor(model => model.password, new {htmlAttributes = new
        {@class = "form-control"}})
      </div>
      <input type="submit" value="Login" />
      <div class="text-center w-12/12">
        @Html.ActionLink("Don't have an account? Click Here","Register","User")
      </div>
    </form>
  </div>
</section>
}
